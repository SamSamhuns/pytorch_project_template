{
  "__comment__": "vals inside <...> have to be replaced",

  "NAME": "<MODEL_NAME>",
  "SEED": 1,
  "USE_CUDA": true,
  "N_GPU": 1,
  "GPU_DEVICE": [0],
  "ARCH": {
    "TYPE": "<ARCH_TYPE>",
    "PRETRAINED": true,
    "INPUT_WIDTH": 224,
    "INPUT_HEIGHT": 224
  },
  "DATASET": {
    "RAW_DATA_ROOT_DIR": "raw_data",
    "PROC_DATA_ROOT_DIR": "data",
    "TRAIN_DIR": "train",
    "TEST_DIR": "test",
    "NUM_CLASSES": 100
  },
  "DATALOADER": {
    "TYPE": "<DATALOADER_NAME>",
    "BATCH_SIZE": 32,
    "SHUFFLE": true,
    "NUM_WORKERS": 8,
    "VALIDATION_SPLIT": 0.1,
    "PIN_MEMORY": true
  },
  "OPTIMIZER": {
    "TYPE": "<OPTIM_NAME>",
    "LR": 1e-4,
    "WEIGHT_DECAY": 0,
    "AMSGRAD": true,
    "<OTHER OPTIONS>": "<VAL>"
  },
  "LOSS": "<LOSS_TYPE>",
  "METRICS": ["accuracy", "top_k_acc"],
  "LR_SCHEDULER": {
    "TYPE": "<LR_TYPE>",
    "GAMMA": 0.1,
    "STEP_SIZE": 50,
    "MILESTONES": [5, 7, 9, 10, 11, 12],
    "<OTHER OPTIONS>": "<VAL>"
  },
  "TRAINER": {
    "RESUME": false,
    "LOG_FREQ": 20,
    "VALID_FREQ": 2,

    "EPOCHS": 12,
    "CHECKPOINT_DIR": "checkpoints",

    "VERBOSITY": 2,
    "EARLY_STOP": 10,
    "TENSORBOARD": true,
    "TENSORBOARD_PORT": 8099
  },
  "LOGGER": {
    "DIR": "logs",
    "LOG_FMT": "log_{}.txt",
    "FILE_FMT": "%(asctime)s %(levelname)-8s: %(message)s",
    "CONSOLE_FMT": "%(message)s",
    "FILE_LEVEL": 10,
    "CONSOLE_LEVEL": 10
  }
}
