{
  "name": "image_classifier",
  "git_hash": null,
  "mode": "TRAIN",
  "seed": 42,
  "cudnn_deterministic": false,
  "cudnn_benchmark": false,
  "gpu_device": null,
  "use_amp": false,
  "torch_compile_model": false,
  "quant_backend": null,
  "trainer": {
    "type": "ClassifierTrainer",
    "resume_checkpoint": null,
    "save_best_only": true,
    "batch_log_freq": 5,
    "weight_save_freq": 5,
    "valid_freq": 2,
    "epochs": 12,
    "verbosity": 2,
    "save_dir": "checkpoints",
    "use_tensorboard": true,
    "tensorboard_port": null
  },
  "model": {
    "type": "ClassifierModel",
    "args": {
      "backbone": "mobilenet_v2",
      "num_classes": 20,
      "feat_extract": false,
      "pretrained_weights": "MobileNet_V2_Weights.IMAGENET1K_V1"
    },
    "info": {
      "input_width": 224,
      "input_height": 224,
      "input_channel": 3
    }
  },
  "dataset": {
    "type": "ClassifierDataset",
    "args": {
      "root": "data/birds_dataset",
      "train_path": "train",
      "val_path": "valid",
      "test_path": "test"
    },
    "num_classes": 20,
    "preprocess": {
      "train_transform": "ImagenetClassifierPreprocess",
      "val_transform": "ImagenetClassifierPreprocess",
      "test_transform": "ImagenetClassifierPreprocess",
      "inference_transform": "ImagenetClassifierPreprocess"
    }
  },
  "dataloader": {
    "type": "CustomDataLoader",
    "args": {
      "batch_size": 32,
      "num_workers": 4,
      "shuffle": true,
      "validation_split": 0.0,
      "drop_last": false,
      "pin_memory": false,
      "prefetch_factor": 2,
      "worker_init_fn": null
    }
  },
  "optimizer": {
    "type": "SGD",
    "args": {
      "lr": 1e-2,
      "momentum": 0.9
    }
  },
  "loss": {
    "type": "NLLLoss",
    "args": {}
  },
  "metrics": {
    "val": [
      "accuracy_score"
    ],
    "test": [
      "accuracy_score",
      "f1_score",
      "precision_score",
      "recall_score",
      "roc_auc_score"
    ]
  },
  "lr_scheduler": {
    "type": "ReduceLROnPlateau",
    "args": {
      "factor": 0.1,
      "patience": 8
    }
  }
}
