{
  "name": "image_classifier",
  "seed": 42,
  "cudnn_deterministic": true,
  "cudnn_benchmark": false,
  "gpu_device": null,
  "use_amp": false,
  "torch_compile_model": false,
  "trainer": {
    "resume_checkpoint": null,
    "save_best_only": true,
    "batch_log_freq": 5,
    "weight_save_freq": 5,
    "valid_freq": 2,
    "epochs": 12,
    "verbosity": 2,
    "save_dir": "checkpoints",
    "use_tensorboard": true,
    "tensorboard_port": 6006,
    "tensorboard_log_dir": "tf_logs"
  },
  "arch": {
    "type": "Classifier",
    "args": {
      "feat_extract": false,
      "pretrained_weights": "MobileNet_V2_Weights.IMAGENET1K_V1"
    },
    "backbone": "mobilenet_v2",
    "input_width": 224,
    "input_height": 224,
    "input_channel": 3
  },
  "dataset": {
    "type": "ClassifierDataset",
    "args": {
      "data_root": "data/birds_dataset",
      "train_path": "train",
      "val_path": "val",
      "test_path": "test"
    },
    "num_classes": 525,
    "preprocess": {
      "train_transform": "ClassifierPreprocess.train",
      "val_transform": "ClassifierPreprocess.val",
      "test_transform": "ClassifierPreprocess.test",
      "inference_transform": "ClassifierPreprocess.inference"
    }
  },
  "dataloader": {
    "type": "BaseDataLoader",
    "args": {
      "batch_size": 32,
      "num_workers": 4,
      "shuffle": true,
      "validation_split": 0.0,
      "drop_last": false,
      "pin_memory": false,
      "prefetch_factor": 2,
      "worker_init_fn": null
    }
  },
  "optimizer": {
    "type": "SGD",
    "args": {
      "lr": 1e-2,
      "momentum": 0.9
    }
  },
  "loss": {
    "type": "NLLLoss",
    "args": {}
  },
  "metrics": {
    "val": [
      "accuracy_score"
    ],
    "test": [
      "accuracy_score",
      "f1_score",
      "precision_score",
      "recall_score",
      "roc_auc_score"
    ]
  },
  "lr_scheduler": {
    "type": "ReduceLROnPlateau",
    "args": {
      "factor": 0.1,
      "patience": 8
    }
  },
  "logger": {
    "file_fmt": "%(asctime)s %(levelname)-8s: %(message)s",
    "console_fmt": "%(message)s",
    "logger_level": 10,
    "file_level": 10,
    "console_level": 10,
    "<avai logger levels>": "DEBUG:10, INFO:20, WARNING:30, ERROR:40, CRITICAL:50"
  }
}
