{
  "name": "image_classifier",
  "seed": 42,
  "use_cuda": false,
  "cudnn_deterministic": true,
  "cudnn_benchmark": false,
  "gpu_device": [0],
  "use_amp": false,
  "arch": {
    "type": "Mnist",
    "args": {
      "feat_extract": false,
      "pretrained": true
    },
    "backbone": null,
    "input_width": 28,
    "input_height": 28,
    "input_channel": 1
  },
  "dataset": {
    "type": "MnistDataset",
    "args": {
      "data_root": "data",
      "train_dir": "train",
      "val_dir": null,
      "test_dir": "test"
    },
    "num_classes": 10,
    "preprocess": {
      "train_transform": "MnistPreprocess.train",
      "val_transform": "MnistPreprocess.val",
      "test_transform": "MnistPreprocess.test",
      "inference_transform": "MnistPreprocess.inference"
    }
  },
  "dataloader": {
    "type": "BaseDataLoader",
    "args": {
      "batch_size": 32,
      "num_workers": 0,
      "shuffle": true,
      "validation_split": 0.1,
      "drop_last": false,
      "pin_memory": true,
      "prefetch_factor": 2,
      "worker_init_fn": null
    }
  },
  "optimizer": {
    "type": "SGD",
    "args": {
      "lr": 1e-2,
      "momentum": 0.5
    }
  },
  "loss": {
    "type": "NLLLoss",
    "args": {}
  },
  "metrics": ["val_accuracy"],
  "lr_scheduler": {
    "type": "ReduceLROnPlateau",
    "args": {
      "factor": 0.1,
      "patience": 8
    }
  },
  "trainer": {
    "resume": true,
    "save_best_only": true,
    "log_freq": 1,
    "valid_freq": 2,
    "epochs": 12,
    "verbosity": 2,
    "save_dir": "checkpoints",
    "use_tensorboard": true,
    "tensorboard_port": 6006,
    "tensorboard_log_dir": "tf_logs"
  },
  "logger": {
    "file_fmt": "%(asctime)s %(levelname)-8s: %(message)s",
    "console_fmt": "%(message)s",
    "logger_level": 10,
    "file_level": 10,
    "console_level": 10,
    "<avai logger levels>": "DEBUG:10, INFO:20, ERROR:40"
  }
}
